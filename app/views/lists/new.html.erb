<h1> Create a new list</h1>

<% if @list.errors.any? %>
    <% @list.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>

<%= form_for(@list) do |f| %>

<%= render partial: 'form', locals: {f: f} %>

<%= f.fields_for :items do |i| %>
    <%= i.label :item_name %>
    <%= i.text_field :name %><br>

    <%= i.label :quantity %>
    <%= i.text_field :quantity %><br>
<% end %>
    

    <%= f.submit %>
<% end %>